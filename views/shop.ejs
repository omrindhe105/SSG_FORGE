<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind for better styling -->
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-md">
        <div class="container">
            <a class="navbar-brand text-green-600 font-bold text-lg" href="/">My Shop</a>
            <a href="/home/cart" class="btn btn-success flex items-center gap-2">
                üõí View Cart
            </a>
        </div>
    </nav>

    <!-- Shop Section -->
    <div class="container mt-5">
        <h2 class="text-center text-3xl font-semibold text-gray-700 mb-5">Products</h2>
        <div class="row justify-content-center gap-4">
          <% Products.forEach(function(product){ %>

            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card shadow-lg rounded-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl">
                    <!-- Image -->
                    <div class="w-full h-52 bg-gray-200 flex items-center justify-center">
                        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                             class="w-full h-full object-cover" 
                             alt="Product Image">
                    </div>

                    <!-- Card Body -->
                    <div class="card-body text-center bg-white">
                        <h5 class="card-title text-xl font-bold text-gray-800"><%= product.name %></h5>
                        <p class="card-text text-green-600 font-semibold text-lg">$ <%= product.price %></p>
                        <form action="/add-to-cart" method="POST">
                            <input type="hidden" name="id" value="<%= product._id %>">
                            <button type="submit" class="btn bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-full mt-3 transition-all">
                                Add to Cart üõçÔ∏è
                            </button>
                        </form>
                    </div>
                </div>
            </div>

          <% }) %>
        </div>
    </div>

</body>
</html>
