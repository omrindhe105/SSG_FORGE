<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auth Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function toggleForm() {
            let isSignUp = document.getElementById("auth-heading").innerText === "Create your account";
            document.getElementById("auth-heading").innerText = isSignUp ? "Login to your account" : "Create your account";
            document.getElementById("auth-subtext").innerText = isSignUp ? "Enter your credentials to continue" : "Fill in the details below to get started";
            document.getElementById("name-field").style.display = isSignUp ? "none" : "block";
            document.getElementById("auth-btn").innerText = isSignUp ? "Login →" : "Create account →";
            document.getElementById("toggle-text").innerHTML = isSignUp ? "Don't have an account? <a href='#' onclick='toggleForm()' class='text-primary'>Sign up</a>" : "Already have an account? <a href='#' onclick='toggleForm()' class='text-primary'>Sign in</a>";
        }
    </script>
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-lg" style="width: 350px;">
        <h2 id="auth-heading" class="text-center">Create your account</h2>
        <p id="auth-subtext" class="text-center text-muted">Fill in the details below to get started</p>
        <form action="/user/register" method="post">
            <div id="name-field" class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" placeholder="John Doe" name="Fullname">
            </div>
            <div class="mb-3">
                <label class="form-label">Email Address</label>
                <input type="email" class="form-control" placeholder="you@example.com" name="email">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" placeholder="••••••••" name="password">
            </div>
            <button id="auth-btn" class="btn btn-primary w-100"  >Create account →</button>
        </form>
        <p id="toggle-text" class="text-center mt-3 text-muted">Already have an account? <a href="#" onclick="toggleForm()" class="text-primary">Sign in</a></p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
